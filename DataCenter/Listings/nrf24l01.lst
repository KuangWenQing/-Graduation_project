  18          /*****************SPI时序函数********************
  19          读数据时，byte写0
  20          
  21          其实不论读写数据，该函数都会返回byte，
  22          只是配置成写数据MISO上的电平不会变。
  23          ************************************************/
  24          static u8 SPI_RW(u8 byte)
  25          {
  26   1        u8 bit_ctr;
  27   1        for(bit_ctr=0; bit_ctr<8; bit_ctr++)
  28   1        {
  29   2          MOSI = (byte & 0x80);   //MCU to NRF24L01 
  30   2          byte = (byte << 1);    
  31   2          
  32   2          SCK = 1;     
  33   2          
  34   2          byte |= MISO;               //NRF24L01 to MCU     
  35   2          
  36   2          SCK = 0;                                
  37   2        }
  38   1        return(byte);                              
  39   1      }
